@{
    ViewData["Title"] = "Driver List";
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form>
    @Html.AntiForgeryToken()
</form>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />

<div class="row mb-4">
    <!-- DAILY DAY OFF DRIVER -->
    <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
        <div class="small-box bg-danger">
            <div class="inner">
                <h3 id="dailyDayOffBox">Failed to Fetch</h3>
                <p>Number of Drivers Off Today</p>
            </div>
            <div class="icon">
                <i class="fas fa-user-times"></i>
            </div>
        </div>
    </div>

    <!-- TOTAL FEMALE DRIVERS -->
    <div class="col-lg-2 col-md-3 col-sm-6 mb-3">
        <div class="small-box bg-warning">
            <div class="inner">
                <h3 id="totalFemaleDriversBox">Failed to Fetch</h3>
                <p>Total Female Drivers</p>
            </div>
            <div class="icon">
                <i class="fas fa-venus"></i>
            </div>
        </div>
    </div>

    <!-- TOTAL MALE DRIVERS -->
    <div class="col-lg-2 col-md-3 col-sm-6 mb-3">
        <div class="small-box bg-primary">
            <div class="inner">
                <h3 id="totalMaleDriversBox">Failed to Fetch</h3>
                <p>Total Male Drivers</p>
            </div>
            <div class="icon">
                <i class="fas fa-mars"></i>
            </div>
        </div>
    </div>

    <!-- DAILY DRIVER COUNT -->
    <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
        <div class="small-box bg-success">
            <div class="inner">
                <h3 id="dailyDriverCountBox">Failed to Fetch</h3>
                <p>Number of Drivers on Duty Today</p>
            </div>
            <div class="icon">
                <i class="fas fa-user-check"></i>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <!-- TITLE -->
    <div class="card-header">
        <h3 class="card-title">Driver Information Table</h3>
    </div>

    <div class="card-body">
        <table id="driverTable" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="display:none;">ID</th>
                    <th>Driver</th>
                    <th>Phone Number</th>
                    <th>Registration Number</th>
                    <th>Garage</th>
                    <th>Chief</th>
                    <th>Cadre</th>
                    <th>Day Off</th>
                    <th>Is Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script src="~/js/admin/drivers.js"></script>
<script src="~/js/daily/dailyDayOffDriver.js"></script>
<script src="~/js/daily/dailyFemaleDriverCount.js"></script>
<script src="~/js/daily/dailyMaleDriverCount.js"></script>
<script src="~/js/daily/dailyDriverCount.js"></script>
<script src="~/js/personCard.js"></script>
<script src="~/js/taskListCard.js"></script>
<script src="~/js/admin/adminDriversClickHandlers.js"></script>
