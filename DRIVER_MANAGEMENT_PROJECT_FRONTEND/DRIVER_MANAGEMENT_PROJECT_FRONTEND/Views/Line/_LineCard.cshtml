<div class="p-3 line-info-box">
    <h6 class="text-primary mb-3"><i class="fas fa-info-circle me-1"></i> Line Details</h6>
    <div class="d-flex flex-wrap align-items-center gap-4">
        <div class="info-item">
            <small class="text-muted d-block mb-1">Line Code</small>
            <p class="mb-0 fw-semibold">@Model.LineCode</p>
        </div>
        <div class="info-item">
            <small class="text-muted d-block mb-1">Line Name</small>
            <p class="mb-0 fw-semibold">@Model.LineName</p>
        </div>
        <div class="info-item">
            <small class="text-muted d-block mb-1">Is Active</small>
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Active</span>
            }
            else
            {
                <span class="badge bg-danger">Inactive</span>
            }
        </div>
    </div>
</div>

<style>
    .line-info-box {
        background-color: #fff;
        border: 1px solid #d1d5db;
        border-radius: 0.6rem;
        padding: 1.2rem 1.6rem;
        box-shadow: 0 2px 6px rgb(0 0 0 / 0.08);
        max-width: 100%;
    }

    .info-item small {
        font-size: 0.9rem;
        color: #6c757d;
    }

    .info-item p {
        font-size: 1.15rem;
        font-weight: 600;
        margin: 0;
        color: #212529;
    }
</style>
