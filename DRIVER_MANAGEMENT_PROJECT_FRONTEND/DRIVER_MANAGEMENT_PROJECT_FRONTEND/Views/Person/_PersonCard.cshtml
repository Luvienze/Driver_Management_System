@model DRIVER_MANAGEMENT_PROJECT_FRONTEND.Dto.PersonDto
@using DRIVER_MANAGEMENT_PROJECT_FRONTEND.Dto.Enum
@using DRIVER_MANAGEMENT_PROJECT_FRONTEND.Utils

<div class="p-2">
    <div class="card card-primary elevation-2 mb-0">
        <div class="card-body p-3">
            <div class="row">
                <div class="col-md-4 text-center">
                    <div class="person-image-container mb-3">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="Driver Image" class="person-image img-fluid rounded-circle border border-primary" />
                        }
                        else
                        {
                            <div class="person-placeholder d-flex align-items-center justify-content-center rounded-circle border border-primary">
                                <i class="fas fa-user text-white" style="font-size: 60px;"></i>
                            </div>
                        }
                    </div>
                </div>


                <div class="col-md-8">
                    <h6 class="text-primary mb-2"><i class="fas fa-info-circle me-1"></i> Driver Details</h6>
                    <div class="row g-2">
                        <div class="col-sm-6">
                            <small class="text-muted">First Name</small>
                            <p class="mb-1">@Model.FirstName</p>
                        </div>
                        <div class="col-sm-6">
                            <small class="text-muted">Last Name</small>
                            <p class="mb-1">@Model.LastName</p>
                        </div>
                        <div class="col-sm-6">
                            <small class="text-muted">Gender</small>
                            <p class="mb-1">@((Genders)Model.Gender)</p>
                        </div>
                        <div class="col-sm-6">
                            <small class="text-muted">Phone</small>
                            <p class="mb-1">@Model.Phone</p>
                        </div>
                        <div class="col-sm-12">
                            <small class="text-muted">Address</small>
                            <p class="mb-1">@Model.Address</p>
                        </div>
                        <div class="col-sm-6">
                            <small class="text-muted">Blood Group</small>
                            <p class="mb-1">@((Enum.IsDefined(typeof(BloodGroups), Model.BloodGroup) ? ((BloodGroups)Model.BloodGroup).GetDisplayName() : "Bilinmiyor"))</p>
                        </div>
                        <div class="col-sm-6">
                            <small class="text-muted">Registration Number</small>
                            <p class="mb-1 text-primary">@Model.RegistrationNumber</p>
                        </div>
                        <div class="col-sm-6">
                            <small class="text-muted">Date of Birth</small>
                            <p class="mb-1">@Model.DateOfBirth.ToShortDateString()</p>
                        </div>
                        <div class="col-sm-6">
                            <small class="text-muted">Start Date</small>
                            <p class="mb-1">@Model.DateOfStart.ToShortDateString()</p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    small {
        font-size: 0.95rem;
    }

    p {
        font-size: 1.1rem;
    }

    .badge {
        font-size: 0.9rem;
        padding: 0.5em 0.7em;
    }

    .card {
        margin-bottom: 0;
    }

    .modal-dialog {
        max-width: 600px;
    }

    .person-image-container {
        width: 150px;
        height: 150px;
        margin: 0 auto;
        box-shadow: 0 4px 8px rgba(0,0,0,0.15);
        border-radius: 50%;
        overflow: hidden;
    }

    .person-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .person-placeholder {
        width: 150px;
        height: 150px;
        background-color: #6c757d; /* Bootstrap gray */
    }


    @@media (max-width: 767px) {
        .col-md-4 {
            margin-bottom: 1rem;
        }

        .modal-dialog {
            max-width: 90%;
        }
    }
</style>