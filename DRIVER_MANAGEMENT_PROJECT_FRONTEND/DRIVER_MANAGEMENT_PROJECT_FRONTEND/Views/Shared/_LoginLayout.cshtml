@using DRIVER_MANAGEMENT_PROJECT_FRONTEND.Resources
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>DRIVER MANAGEMENT</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <partial name="_Styles" />
    @RenderSection("css", required: false)

    <style>
        body {
            margin: 0;
            padding: 0;
            background: url('/img/istanbul.jpg') no-repeat center center fixed;
            background-size: cover;
            position: relative;
        }

            body::before {
                content: "";
                position: fixed;
                top: 0;
                left: 0;
                height: 100vh;
                width: 100vw;
                background: inherit;
                filter: blur(8px);
                z-index: -1;
            }

        .login-title {
            color: white !important;
            font-size: 2rem;
            font-weight: 500;
            text-align: center;
            margin: 0 0 1rem 0;
        }
    </style>

</head>
<body class="hold-transition login-page">
    @RenderBody()

    <partial name="_Scripts" />
    @RenderSection("scripts", required: false)
</body>
</html>
